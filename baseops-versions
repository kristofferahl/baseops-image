#!/usr/bin/env bash

echo "arch"
echo "*************************************************************************"
uname -a
echo

echo "bash"
echo "*************************************************************************"
bash --version || exit 1
echo

echo "jq"
echo "*************************************************************************"
jq --version || exit 1
echo

echo "curl"
echo "*************************************************************************"
curl --version || exit 1
echo

echo "git"
echo "*************************************************************************"
git --version || exit 1
echo

echo "docker"
echo "*************************************************************************"
docker version || exit 1
echo

echo "docker-compose"
echo "*************************************************************************"
docker-compose --version || exit 1
echo

echo "dig"
echo "*************************************************************************"
dig -v || exit 1
echo

echo "aws"
echo "*************************************************************************"
aws --version || exit 1
echo
